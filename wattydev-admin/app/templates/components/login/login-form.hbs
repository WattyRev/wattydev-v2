<form class="col-xs-12 col-sm-8 col-md-6 col-lg-4 col-sm-offset-2 col-md-offset-3 col-lg-offset-4 pane panel-default" {{action 'logIn' on="submit"}}>
    <div class="panel-heading">
        <h3 class="panel-title">Log In</h3>
    </div>
    <div class="panel-body">
        {{#if invalid}}
            <div class="alert alert-danger">
                Your credentials weren't correct! Are you sure you're supposed to be here?
            </div>
        {{/if}}
        <div class="form-group">
            <label for="email-input">Email Address</label>
            {{input type="email" id="email-input" class="form-control" value=email}}
        </div>
        <div class="form-group">
            <label for="password-input">Password</label>
            {{input type="password" id="password-input" class="form-control" value=password}}
        </div>
        <div class="form-group text-right">
            <button class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
