{{#if emptyValue}}
    {{#modal-link tagName="button" class="btn btn-default btn-block" type="button" onClose='doneEditing' data=value component='images/image-manager'}}Select an Image{{/modal-link}}
{{else}}
    <div class="text-center form-group">
        <img src="{{imageUrl}}" class="thumbnail-small" />
    </div>
    <div class="form-group">
        {{#modal-link tagName="button" class="btn btn-default btn-block" type="button" onClose='doneEditing' data=value component='images/image-manager'}}Select a Different Image{{/modal-link}}
    </div>
{{/if}}
