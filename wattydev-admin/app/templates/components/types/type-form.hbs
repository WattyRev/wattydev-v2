<form {{action "save" on="submit"}}>
    <div class="modal-header">
        <button type="button" class="close" {{action 'cancel'}} disabled={{loading}}><span>Ã—</span></button>
        <h4 class="modal-title">{{if type.id 'Editing Type' 'Creating New Type'}}</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Type Name</label>
            {{input type="text" value=type.title required=true class="form-control" disabled=loading}}
        </div>
        <div class="form-group">
            <label>Select parent type (optional)</label>
            {{#x-select value=type.parent class="form-control" disabled=loading}}
                {{#x-option value='0'}}None{{/x-option}}
                {{#each parentsOptions as |option|}}
                    {{#x-option value=option.id}}{{option.title}}{{/x-option}}
                {{/each}}
            {{/x-select}}
        </div>
    </div>
    <div class="modal-footer">
        {{#if type.id}}
            <button class="btn btn-danger pull-left" type="button" {{action 'delete'}} disabled={{loading}}>Delete</button>
        {{/if}}
        <button class="btn btn-default" type="button" {{action 'cancel'}} disabled={{loading}}>Cancel</button>
        <button class="btn btn-primary" disabled={{loading}}>Save</button>
    </div>
</form>
